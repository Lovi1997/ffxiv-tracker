{
  "name": "ffxiv-tracker",
  "version": "0.2.0",
  "description": "FFXIV-Tracker",
  "main": "public/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lovi1997/ffxiv-tracker.git"
  },
  "keywords": [],
  "author": "Lovi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Lovi1997/ffxiv-tracker/issues"
  },
  "homepage": "./",
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.3.8",
    "file-system": "^2.2.2",
    "is-online": "^9.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.2",
    "request": "^2.88.2",
    "web-vitals": "^1.1.0",
    "winston": "^3.3.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "electron-start": "electron .",
    "predist": "npm run build",
    "dist": "electron-builder --win -c.extraMetadata.main=build/main.js --publish never",
    "predeploy": "npm run build",
    "deploy": "electron-builder --win -c.extraMetadata.main=build/main.js --publish always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^11.2.3",
    "electron-builder": "^22.9.1"
  },
  "build": {
    "appId": "ffxiv.tracker",
    "publish": {
      "provider": "github",
      "token": ""
    },
    "files": [
      "src/**/*",
      "!node_modules/.cache/*",
      "!package-lock-json",
      "build/*"
    ],
    "extraResources": [
      "extraResources/config/**/*",
      "extraResources/log/**/*",
      "!extraResources/data/**/*"
    ],
    "productName": "FFXIV-Tracker",
    "target": "NSIS",
    "directories": {
      "buildResources": "assets"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "win": {
      "certificateFile": "cert.pfx",
      "certificatePassword": "",
      "verifyUpdateCodeSignature": false
    }
  }
}
